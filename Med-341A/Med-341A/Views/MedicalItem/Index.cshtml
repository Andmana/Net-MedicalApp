@using Med_341A.viewmodels
@model List<VMedicalItem>
@{

}
<div class="page-inner">

    <div class="row">
        <div class="col-md-6">
            <div class="card card-profile">
                <div class="card-body d-flex justify-content-between gap-3">
                    <!-- Medical Info-->
                    <div class="d-flex flex-column justify-content-between gap-2">
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4 class="timeline-title">Mussum ipsum cacilds</h4>
                                <p class="ps-2">
                                    <small class="text-muted">
                                        Per strip @@ 10 kaplet
                                    </small>
                                    <small class="d-block text-muted">
                                        <i class="fas fa-money-check-alt"></i> 
                                        Rp. 5000 - 50000
                                    </small>
                                </p>
                                
                            </div>
                            <div class="timeline-body">
                                <p>
                                    Far far away, behind the word mountains, far from the
                                    countries Vokalia and Consonantia, there live the
                                    blind texts.
                                </p>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-sm btn-secondary mx-auto" style="width: 90%;">Tambah ke keranjang</button>
                            </div>
                        </div>
                    </div>

                    <!-- Medical Image-->
                    <div class="d-flex flex-column justify-content-between border-2">
                        <div class="avatar avatar-xxl">
                            <img src="~/assets/img/jm_denis.jpg" alt="..." class="avatar-img rounded-2">
                        </div>
                        <a class="btn btn-black" width="auto">Detail</a>
                    </div>
                </div>
                
                <div class="card-footer d-flex justify-content-between">

                </div>
            </div>
        </div>
        
        @foreach(VMedicalItem item in Model)
        {
            <div class="col-md-6">
                <div class="card card-profile">
                    <div class="card-body d-flex justify-content-between gap-3">
                        <!-- Medical Info-->
                        <div class="d-flex flex-column justify-content-between gap-2">
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4 class="timeline-title">@item.Name</h4>
                                    <p class="ps-2">
                                        <small class="text-muted">
                                            Per strip @@ @item.Packaging
                                        </small>
                                        <small class="d-block text-muted">
                                            <i class="fas fa-money-check-alt"></i>
                                            Rp. @item.PriceMin - Rp . @item.PriceMax
                                        </small>
                                    </p>

                                </div>
                                <div class="timeline-body">
                                    <p>
                                        Untuk meredakan @item.Indication
                                    </p>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-sm btn-secondary mx-auto" style="width: 90%;">Tambah ke keranjang</button>
                                </div>
                            </div>
                        </div>

                        <!-- Medical Image-->
                        <div class="d-flex flex-column justify-content-between border-2">
                            <div class="avatar avatar-xxl">
                                <img src="~/assets/img/jm_denis.jpg" alt="..." class="avatar-img rounded-2">
                            </div>
                            <a class="btn btn-black" width="auto">Detail</a>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between">
                    </div>
                </div>
            </div>

        }
        
    </div>
</div>