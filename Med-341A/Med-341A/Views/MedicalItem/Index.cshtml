@using Med_341A.viewmodels
@model List<VMedicalItem>
@{

}


<div class="page-inner">
    <div class="card">
        <div class="card-body">
            <div class="row row-demo-grid">
                <div class="col-12 col-md-8">
                    <code>
                        col-12 col-md-8
                    </code>
                </div>
                <div class="col-6 col-md-4">
                    <div class="d-flex justify-content-end align-content-center">
                        <a class="btn btn-info">Ulangi Pencarian</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="card">
        <div class="card-header">

        </div>
        <div class="card-body">
            <div class="row mx-auto" style="width:90%">

                @foreach (VMedicalItem item in Model)
                {
                    <div class="col-md-6">
                        <div class="card card-profile">
                            <div class="card-body py-5 px-4 d-flex justify-content-around gap-3">
                                <!-- Medical Info-->
                                <div class="flex-1 d-flex flex-column justify-content-between gap-2">
                                    <div class="timeline-panel">
                                        <div class="timeline-heading">
                                            <h4 class="timeline-title">@item.Name</h4>
                                            <p class="ps-2">
                                                <small class="text-muted">
                                                    Per strip @@ @item.Packaging
                                                </small>
                                                <small class="d-block text-muted">
                                                    <i class="fas fa-money-check-alt"></i>
                                                    Rp. @item.PriceMin - Rp . @item.PriceMax
                                                </small>
                                            </p>

                                        </div>
                                        <div class="timeline-body">
                                            <p>
                                                Untuk meredakan @item.Indication
                                            </p>
                                        </div>

                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <button class="btn btn-sm btn-secondary" style="width: 100%;">Tambah ke keranjang</button>
                                    </div>
                                </div>

                                <!-- Medical Image-->
                                <div class="d-flex flex-column justify-content-between border-2">
                                    <div class="avatar avatar-xxl">
                                        <img src="~/assets/img/jm_denis.jpg" alt="..." class="avatar-img rounded-2">
                                    </div>
                                    <a class="btn btn-black" width="auto">Detail</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
        
    </div>
    
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12 col-md-5 d-flex flex-column justify-content-center">
                    <div class="dataTables_info"
                         id="add-row_info"
                         role="status"
                         aria-live="polite">
                        Data ke 5
                        dari 500
                    </div>
                </div>
                <div class="col-sm-12 col-md-7 ">
                    @{
                        var prevDisabled = "";
                        var nextDisabled = "";
                    }
                    <div class="dataTables_paginate paging_simple_numbers d-flex justify-content-end align-items-center"
                         id="add-row_paginate">
                        <ul class="pagination mb-0">
                            <li class="paginate_button previous">
                                <a asp-action="Index"
                                   class="page-link text-primary @prevDisabled">
                                    Previous
                                </a>
                            </li>
                            <li class="page-link rounded-5">
                                Halaman ke 1 dari 10
                            </li>
                            <li class="paginate_button next">
                                <a asp-action="Index"
                                   class="page-link text-primary @nextDisabled">
                                    Next
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
        
</div>

