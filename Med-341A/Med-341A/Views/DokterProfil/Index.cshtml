@using Med_341A.viewmodels
@model VMDoctor

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 bg-light p-3">
            <!-- Sidebar Profile -->
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/@ViewBag.ImagePath" class="rounded-circle img-fluid" alt="Profile Image" style="width: 150px;" />
                    <h4 class="mt-2">dr. Tatjana Saphira, Sp.A</h4>
                    <p>Spesialis Anak</p>
                    <button class="btn btn-primary">Janji</button>
                    <hr />
                    <div>
                        <h5>Obrolan / Konsultasi</h5>
                        <p>Tersedia</p>
                    </div>
                </div>
            </div>

            <!-- Info Dokter -->
            <div class="card mt-3">
                <div class="card-body">
                    <h5>Tindakan Medis</h5>
                    <ul class="list-unstyled">
                        <li>- Fisioterapi anak</li>
                        <li>- Konsultasi kesehatan anak</li>
                        <li>- Skrining tumbuh kembang anak</li>
                        <li>- Vaksin anak</li>
                        <li>- Konsultasi alergi anak</li>
                        <li>- Konsultasi psikologi anak</li>
                        <li>- Tes pendengaran OAE</li>
                    </ul>
                    <h5>Riwayat Praktek</h5>
                    <ul class="list-unstyled">
                        <li>RS Mitra, Depok (2019 - sekarang)</li>
                        <li>PSIA Bunda, Jakarta Pusat (2018 - sekarang)</li>
                        <li>RSUP Hasan Sadikin, Bandung (2016 - 2018)</li>
                    </ul>
                    <h5>Pendidikan</h5>
                    <ul class="list-unstyled">
                        <li>Universitas Padjadjaran, Spesialis Anak (2016)</li>
                        <li>Universitas Padjadjaran, Kedokteran Umum (2011)</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-9 p-4">
            <!-- Tabs Area -->
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Tindakan</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Aktifitas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Konsultasi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Pengaturan</a>
                </li>
            </ul>

            <div class="tab-content p-3">
                <div class="tab-pane fade show active" id="tindakan">
                    <h4>Daftar Tindakan</h4>
                    <p>Tidak ada tindakan tersedia saat ini.</p>
                </div>
                <div class="tab-pane fade" id="aktifitas">
                    <h4>Riwayat Aktifitas</h4>
                    <p>Tidak ada aktivitas.</p>
                </div>
                <div class="tab-pane fade" id="konsultasi">
                    <h4>Jadwal Konsultasi</h4>
                    <p>Tidak ada konsultasi tersedia.</p>
                </div>
                <div class="tab-pane fade" id="pengaturan">
                    <h4>Pengaturan Profil</h4>
                    <p>Pengaturan dapat diubah di sini.</p>
                </div>
            </div>
        </div>
    </div>
</div>
