
<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
     style="background:url(/adminmart/assets/images/big/auth-bg.jpg) no-repeat center center;">
    <div class="auth-box row">
        <div class="col-lg col-md-7 bg-white">
            <div class="p-3">
                <h2 class="mt-3 text-center">Sign In</h2>
                <p class="text-center">Enter your email address and password to access admin panel.</p>
                <form class="mt-4" id="form_login">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="text-dark" for="Email">Email</label>
                                <input class="form-control" id="Email" type="email" placeholder="enter your email"
                                       name="Email">
                                <span class="text-danger" id="validate_email"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="text-dark" for="Password">Password</label>
                                <input class="form-control" id="Password" type="password"
                                       placeholder="enter your password" name="Password">
                                <span class="text-danger" id="validate_password"></span>
                            </div>
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-block btn-dark">Sign In</button>
                            <a class="btn btn-light border-0 btn_reset">
                                Lupa Password
                            </a>
                        </div>
                        <div class="col-lg-12 text-center mt-5">
                            Don't have an account? <a href="#" class="text-danger" id="btn_register">Sign Up</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    $(".btn_reset").click(function () {

        $("#modal_body").empty()
        $("#modal_body").load("/AuthResetPW/InputEmail")
        $("#my_modal").modal("show")
    })

    $("#form_login").validate({
        errorClass: "is-invalid text-danger",
        rules: {
            Email: {
                required: true,
                email: true,
            },
            Password: "required"
        },
        messages: {
            Email: {
                required: "Please fill email",
                email: "Please fill a valid email address",
            },
            Password: "Please fill password"
        },
        submitHandler: function (form) {
            var email = $("#Email").val()
            var password = $("#Password").val()

            var isEmailValid = false
            var isPasswordValid = false

            var emailCheck = $.ajax({
                url: "/Auth/CheckEmailIsRegistered",
                type: "GET",
                data: { email },
                dataType: "json",
                success: function (response) {
                    if (!response) {
                        $("#validate_email").text('Email tidak terdaftar');
                        isEmailValid = false;
                    } else {
                        $("#validate_email").text("");
                        isEmailValid = true;
                    }
                }
            });

            var passwordCheck = $.ajax({
                url: "/Auth/CheckPasswordIsValid",
                type: "GET",
                data: { email, password },
                dataType: "json",
                success: function (response) {
                    if (!response) {
                        $("#validate_password").text(`Password salah`);
                        isPasswordValid = false;
                    } else {
                        $("#validate_password").text("");
                        isPasswordValid = true;
                    }
                }
            });

            // Use $.when to wait for both AJAX calls to complete
            $.when(emailCheck, passwordCheck).done(function () {
                if (isEmailValid && isPasswordValid) {
                    fungsiSubmit(email, password)
                } else {
                    return false;
                }
            });

        }
    })

    function fungsiSubmit(email, password) {
        $.ajax({
            url: "/Auth/LoginSubmit",
            type: "POST",
            data: { email, password },
            success: function (response) {
                var data = response.dataResponse

                console.log(response)

                if (data.success) {
                    $("#my_modal").modal("hide")

                    window.location.reload()
                }
            }
        })
    }
</script>