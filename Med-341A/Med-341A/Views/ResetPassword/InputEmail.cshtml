<div class="card">
    <div class="card-body">

        <h2 class="mt-3 text-center">Reset Kata Sandi</h2>
        <p class="text-center">Masukan email Anda. Kami akan melakukann pengecekan</p>

        <form class="mt-4" id="form_emailVerification">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="text-dark" for="Email">Email</label>
                        <input class="form-control" id="Email" type="email" placeholder="enter your email" name="Email">
                        <span class="text-danger" id="validate_email"></span>
                    </div>
                </div>

                <div class="col-lg-12 text-center mt-5">
                    <button type="submit" class="btn btn-block btn-dark" id="btn_submit">
                        Kirim OTP
                    </button>
                </div>

                <div class="col-lg-12 text-center mt-5">
                    Kembali ke login <a class="text-danger" style="cursor: pointer;"
                                          onclick="openLoginModal()">Login</a>
                </div>
            </div>
        </form>

    </div>
</div>

<script>

    $("#form_emailVerification").validate({
        errorClass: "is-invalid text-danger position-relative",
        rules: {
            Email: {
                required: true,
                email: true,
            },
        },
        messages: {
            Email: {
                required: "Please fill email",
                email: "Please fill a valid email address",
            },
        },
        submitHandler: function () {
            var email = $("#Email").val()

            $("#btn_submit").prop("disable", true);

            $.ajax({
                url: '/ResetPassword/CheckAccountEmail',
                type: 'post',
                data: { email: email },
                datatype: 'json',
                success: function (response) {
                    var data = response.dataResponse
                    if (data.success) {
                        $("#modal_body").empty()
                        $("#modal_body").load("/ResetPassword/InputOTP")
                        $("#my_modal").modal("show")
                    }else {
                        $("#validate_email").text(`Email belum terdaftar`)
                        $("#btn_submit").prop("disable", false);
                        return true
                    }
                },
                error: function (res) {
                    console.log(res)
                }
            })
        }
    })

</script>