@using Med_341A.viewmodels
@model VMUser

@{
    ViewData["Title"] = "Profil";
}

<div class="container-fluid mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="position-relative text-center mb-3">
                        <img src="~/images/@ViewBag.ImagePath" class="rounded-circle" alt="Profile" style="width: 150px;">
                        <a class="btn_ubah_gambar position-absolute" dataid="@Model.Id" style="top: 0; right: 0; cursor: pointer;">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                    </div>
                    <div class="position-relative">
                        <i class="fas fa-star" style="color: gold; font-size: 24px;"></i>
                    </div>
                    <h4 class="mt-3">Bronze Member</h4>
                    <p>Since @Model.CreatedOn?.ToString("yyyy")</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a href="@Url.Action("LoadEditProfil", "UserProfil")">Edit Profil</a></li>
                    <li class="list-group-item"><a href="@Url.Action("LoadPasien", "UserProfil")">Pasien</a></li>
                    <li class="list-group-item"><a href="#">Pembelian Obat</a></li>
                    <li class="list-group-item"><a href="#">Rencana Kedatangan</a></li>
                    <li class="list-group-item"><a href="#">Riwayat Chat Dokter</a></li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            @if (ViewBag.Page == "Pasien")
            {
                @await Html.PartialAsync("_Pasien")
            }
            else
            {
                @await Html.PartialAsync("_EditProfil")
            }
        </div>
    </div>
</div>

<style>
    .edit-icon {
        color: #007bff;
        cursor: pointer;
    }

        .edit-icon:hover {
            color: #0056b3;
        }
</style>

@section Scripts {
    <script>
        $(".list-group-item a").click(function (e) {
            e.preventDefault(); // Mencegah tindakan default tautan
            var url = $(this).attr("href");

            // Menggunakan AJAX untuk memuat konten
            $.get(url)
                .done(function (data) {
                    $(".col-lg-9").html(data);
                })
                .fail(function () {
                    alert("Failed to load content. Please try again.");
                });
        });
        $(".btn_ubah_gambar").click(function () {
            var id = $(this).attr("dataid")

            $("#modal_title").text("Ubah Gambar")
            $("#modal_body").empty()
            $("#modal_body").load("/UserProfil/UbahGambar?id=" + id)
            $("#my_modal").modal("show")
        })
    </script>
}
